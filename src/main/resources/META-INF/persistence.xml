<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence 
             https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="HumanBeingPU" transaction-type="JTA">
        <jta-data-source>java:/PostgresDS</jta-data-source>
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        
        <class>com.humanbeingmanager.entity.HumanBeing</class>
        <class>com.humanbeingmanager.entity.Coordinates</class>
        <class>com.humanbeingmanager.entity.Car</class>
        <class>com.humanbeingmanager.entity.Mood</class>
        <class>com.humanbeingmanager.entity.WeaponType</class>
        <class>com.humanbeingmanager.entity.ImportHistory</class>
        
        <properties>
            <property name="eclipselink.ddl-generation" value="create-or-extend-tables"/>
            <property name="eclipselink.ddl-generation.output-mode" value="database"/>
            <property name="eclipselink.logging.level" value="INFO"/>
            <property name="eclipselink.logging.parameters" value="true"/>
            <property name="eclipselink.target-database" value="PostgreSQL"/>
            <property name="eclipselink.cache.shared.default" value="false"/>
            <property name="eclipselink.target-server" value="WildFly"/>
            <!-- 
                 Настройка уровня изоляции транзакций для защиты от race conditions.
                 
                 Значения уровня изоляции:
                 1 = TRANSACTION_READ_UNCOMMITTED
                 2 = TRANSACTION_READ_COMMITTED (по умолчанию в PostgreSQL)
                 4 = TRANSACTION_REPEATABLE_READ
                 8 = TRANSACTION_SERIALIZABLE (самый строгий, защищает от всех race conditions)
                 
                 Для EclipseLink с JTA транзакциями используется свойство eclipselink.jdbc.isolation
            -->
            <property name="eclipselink.jdbc.isolation" value="8"/>
        </properties>
    </persistence-unit>
</persistence>