<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.ehcache.org/v3"
        xsi:schemaLocation="http://www.ehcache.org/v3 
        http://www.ehcache.org/schema/ehcache-core-3.0.xsd">

    <cache-template name="entityCacheTemplate">
        <key-type>java.lang.Long</key-type>
        <value-type>java.lang.Object</value-type>
        <resources>
            <heap unit="entries">1000</heap>
            <offheap unit="MB">50</offheap>
            <disk unit="MB">200</disk>
        </resources>
        <expiry>
            <ttl unit="hours">1</ttl>
            <tti unit="minutes">30</tti>
        </expiry>
    </cache-template>

    <cache alias="com.humanbeingmanager.entity.HumanBeing" uses-template="entityCacheTemplate">
        <key-type>java.lang.Long</key-type>
        <value-type>com.humanbeingmanager.entity.HumanBeing</value-type>
    </cache>

    <cache alias="com.humanbeingmanager.entity.Car" uses-template="entityCacheTemplate">
        <key-type>java.lang.Long</key-type>
        <value-type>com.humanbeingmanager.entity.Car</value-type>
    </cache>

    <cache alias="com.humanbeingmanager.entity.ImportHistory" uses-template="entityCacheTemplate">
        <key-type>java.lang.Long</key-type>
        <value-type>com.humanbeingmanager.entity.ImportHistory</value-type>
    </cache>

</config>






